<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<PreferenceCategory android:title="Ajustes generales">
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_name"
        android:inputType="textCapWords"
        android:key="display_name_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Nombre del jugador"/>

</PreferenceCategory>
    <PreferenceCategory android:title="Ajustes del juego">
        <SwitchPreference
            android:defaultValue="true"
            android:key="music_switch"
            android:summary="Animar las jugadas con sonidos"
            android:title="Sonido"/>
        <ListPreference
            android:defaultValue="6"
            android:entries="@array/pref_game_level_list_titles"
            android:entryValues="@array/pref_game_level_list_values"
            android:key="boardfilas_list"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Elige las filas del tablero"
            />
        <ListPreference
                android:defaultValue="7"
                android:entries="@array/pref_game_level_list_titles"
                android:entryValues="@array/pref_game_level_list_values"
                android:key="boardcolumnas_list"
                android:negativeButtonText="@null"
                android:positiveButtonText="@null"
                android:title="Elige las columnas del tablero"
        />

    </PreferenceCategory>


</PreferenceScreen>
